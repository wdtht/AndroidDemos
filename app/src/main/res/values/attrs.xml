<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Progress">
        <attr name="backColor" format="color"/>
        <attr name="barColor" format="color"/>
        <attr name="textColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="RoundProgressBar">
        <attr name="startAngle" format="integer"/>
        <attr name="radius" format="dimension"/>
        <attr name="ringWidth" format="dimension"/>
        <attr name="centerColor" format="color"/>
        <attr name="ringColor" format="color"/>
        <attr name="progressColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="roundTextColor" format="color"/>
        <attr name="isTextDisplay" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RoundView">
        <attr name="viewRadius" format="dimension"/>
        <attr name="viewColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="DropView">
        <!--        左边文字-->
        <attr name="leftString" format="reference|string" />
        <!--        右边列表内容-->
        <attr name="rightListString" format="reference" />
        <!--        是否显示底部分割线-->
        <attr name="showDivideLine" format="boolean" />
        <!--        文字大小-->
        <attr name="text_size" format="dimension" />
    </declare-styleable>

</resources>