<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@android:color/white"
android:paddingLeft="10pt"
android:paddingTop="2pt"
android:paddingRight="10pt"
android:paddingBottom="2pt"
tools:context=".main.activity.MainActivity">

<com.example.androiddemos.view.Progress
    android:id="@+id/bar"
    android:layout_width="match_parent"
    android:layout_height="24dp"
    android:layout_marginTop="100dp"
    app:backColor="@color/black"
    app:barColor="#234567"
    app:textColor="@color/white"

    />
    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="@string/reset" />

    <com.example.androiddemos.view.RoundProgressBar
        android:id="@+id/id_round_progressbar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        app:radius="40dp"
        app:ringWidth="10dp"
        app:startAngle="-90"
        app:centerColor="#F6F6F4"
        app:ringColor="#E1ACACAE"
        app:progressColor="#E1513FEC"
        app:roundTextColor="#000000"
        app:textSize="20sp"
        app:isTextDisplay="true"/>

</RelativeLayout>
